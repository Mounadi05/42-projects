vtysh << EOF
config t
hostname spin-RF
no ipv6 forwarding
!
interface eth0
 ip address 10.1.1.1/30
!
interface eth1
 ip address 10.1.1.5/30
!
interface eth2
 ip address 10.1.1.9/30
!
router bgp 65000
 neighbor ibgp peer-group
 neighbor ibgp remote-as 65000
 neighbor ibgp update-source eth0
 neighbor ibgp update-source eth1
 neighbor ibgp update-source eth2
 bgp listen range 10.1.1.0/28 peer-group ibgp
 !
 address-family l2vpn evp
  neighbor ibgp activate
  neighbor ibgp route-reflector-client
 exit-address-family
!
router ospf
 network 0.0.0.0/0 area 0
!
line vty
!
EOF